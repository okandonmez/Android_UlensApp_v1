<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ulens.ulensapp.Reports.ReportSubmittedInvoices">


    <Button
        android:id="@+id/btnBackSI"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/iconback" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarSubmittedReportsInvoices"
        android:background="@color/UlensSecondColor">


    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSubmittedReportsInvoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/UlensColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeToolbar"
        app:titleMarginStart="60dp">


    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/lvInvoices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/txtTotalSbmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarSubmittedReportsInvoices"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Total Amount"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtNoInvoice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="175dp"
        android:text="Bu rapora kayıtlı fiş bulunmamakta."
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/iconnotification"
        android:visibility="invisible" />
</RelativeLayout>
