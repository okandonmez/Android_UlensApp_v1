<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ulens.ulensapp.UnsubmittedReports">

    <Button
        android:id="@+id/btnBackUR"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_above="@+id/lvReports"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/iconback" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarUnsubmitted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/UlensColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeToolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Gönderilmemiş Raporlar"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>


</RelativeLayout>
