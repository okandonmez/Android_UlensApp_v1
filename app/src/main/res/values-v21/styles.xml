<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/UlensStatusBarColor</item>
        <item name="android:colorAccent">@color/UlensSecondColor</item>
    </style>

    <style name="toolbar" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/UlensColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/White</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/Blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/UlensStatusBarColor</item>
        <item name="colorAccent">@color/UlensSecondColor</item>
    </style>


</resources>